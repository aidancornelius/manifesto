---
import ManifestoLayout from '../layouts/ManifestoLayout.astro';
import { getCollection, render } from 'astro:content';

const manifestoEntries = await getCollection('manifesto');
const sortedEntries = manifestoEntries.sort((a, b) => a.data.number - b.data.number);
const firstEntry = sortedEntries[0];

if (!firstEntry) {
  return Astro.redirect('/404');
}

const { Content } = await render(firstEntry);
---

<ManifestoLayout
  number={firstEntry.data.number}
  title={firstEntry.data.title}
  lightBg={firstEntry.data.lightBg}
  lightFg={firstEntry.data.lightFg}
  darkBg={firstEntry.data.darkBg}
  darkFg={firstEntry.data.darkFg}
>
  <Content />
</ManifestoLayout>
