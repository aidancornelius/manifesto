---
import ManifestoLayout from '../layouts/ManifestoLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const manifestoEntries = await getCollection('manifesto');

  return manifestoEntries.map((entry) => ({
    params: { number: String(entry.data.number) },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<ManifestoLayout
  number={entry.data.number}
  title={entry.data.title}
  lightBg={entry.data.lightBg}
  lightFg={entry.data.lightFg}
  darkBg={entry.data.darkBg}
  darkFg={entry.data.darkFg}
>
  <Content />
</ManifestoLayout>
